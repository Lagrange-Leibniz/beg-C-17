#include <iostream>
#include <iomanip>

int main() {
    const size_t n {50};
    int odds[n];
    for (size_t i {}; i < n; ++i)
        odds[i] = i + 1;

    const size_t perline {10};
    std::cout << "这些数字是：\n";
    for (size_t i {}; i < n; ++i) {
        std::cout << std::setw(5) << odds[i];
        if ((i + 1) % perline == 0)
            std::cout << std::endl;
    }

    std::cout << "\n逆序排列的数字是：\n";
    for (int i {static_cast<int>(n) - 1}; i >= 0; --i) {
        std::cout << std::setw(5) << odds[i];
        if (i % perline == 0)
            std::cout << std::endl;
    }
}
