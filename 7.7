#include <iostream>
#include <sstream>
#include <string>

int main() {
    std::string numbers;
    std::cout << "输入以 # 结束的数字序列:\n";
    std::getline(std::cin, numbers, '#');

    long sum = 0;
    std::stringstream ss(numbers);

    int num;
    while (ss >> num) {
        sum += num;
    }

    if (ss.fail() && !ss.eof()) {
        std::cout << "输入包含非法字符或格式不正确，请检查并重试。" << std::endl;
    } else {
        std::cout << "您输入的数字总和为: " << sum << std::endl;
    }
}
